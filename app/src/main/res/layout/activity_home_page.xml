<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home"
    tools:context=".HomePage">

    <Button
        android:id="@+id/stViewLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_field"
        android:fontFamily="@font/roboto"
        android:text="Logout"
        app:backgroundTint="#009DFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.989" />

    <TextView
        android:id="@+id/stTextHomeName"
        android:layout_width="274dp"
        android:layout_height="20dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/roboto"
        android:textColor="#1E303A"
        app:layout_constraintBottom_toTopOf="@+id/stTextHomeEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/stTextHomeEmail"
        android:layout_width="274dp"
        android:layout_height="18dp"
        android:fontFamily="@font/roboto"
        android:textColor="#1E303A"
        android:textColorHint="#1E303A"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.671"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.603" />

    <TextView
        android:id="@+id/stTextWelcome"
        android:layout_width="276dp"
        android:layout_height="21dp"
        android:fontFamily="@font/roboto"
        android:textColor="#1E303A"
        app:layout_constraintBottom_toTopOf="@+id/stTextHomeName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.681"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="247dp"
        android:layout_height="290dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.761"
        tools:context="com.koddev.scrollview.Homepage">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/stHomeTripSharing"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:background="@drawable/summer_time_car_beach_with_few_suitcase_vacation_travel_huge_pile_things_holiday_flat_cartoon_style_illustration_landscape_concept_isolated_185796_16"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.175"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.499"
                        app:srcCompat="@drawable/summer_time_car_beach_with_few_suitcase_vacation_travel_huge_pile_things_holiday_flat_cartoon_style_illustration_landscape_concept_isolated_185796_16" />

                    <ImageView
                        android:id="@+id/stHomeHomeSharing"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:background="@drawable/circle_cropped"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.175"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/stViewTripSharing"
                        app:layout_constraintVertical_bias="0.286"
                        app:srcCompat="@drawable/circle_cropped" />

                    <ImageView
                        android:id="@+id/stHomePartySharing"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_marginBottom="28dp"
                        android:background="@drawable/parysharepay"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.853"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/stHomeDomestic"
                        app:layout_constraintVertical_bias="0.352"
                        app:srcCompat="@drawable/parysharepay" />

                    <ImageView
                        android:id="@+id/stHomeDomesticSharing"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.853"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintVertical_bias="0.184"
                        app:srcCompat="@drawable/domestic" />

                </LinearLayout>
            </HorizontalScrollView>


        </ScrollView>


    </RelativeLayout>

    <TextView
        android:id="@+id/stHomeViewall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/roboto"
        android:text="View all"
        android:textColor="#1E303A"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.765"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stTextHomeEmail"
        app:layout_constraintVertical_bias="0.635" />


</androidx.constraintlayout.widget.ConstraintLayout>
